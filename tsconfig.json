{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "types": [
      "jasmine",
      "webdriverio/sync",
      "node",
      "@wdio/jasmine-framework",
      "expect-webdriverio/jasmine"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "allure-results",
    "dist",
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
